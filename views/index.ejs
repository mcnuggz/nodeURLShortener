<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="/styles.css" />
        <title>URL Shortener</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
            crossorigin="anonymous" />
    </head>
    <body>
        <div class="container">
            <h1>URL Shortener</h1>
            <hr />
            <form
                action="/shortenLink"
                method="post"
                class="col-xl-6 col-md-6 mb-3">
                <label for="fullUrl" class="form-label">Enter URL:</label>
                <input
                    type="text"
                    placeholder="Enter URL here"
                    name="fullUrl"
                    id="fullUrl"
                    class="mb-2 form-control form-control-sm"
                    required />
                <button type="submit" class="btn btn-success">Shorten</button>
            </form>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Full URL</th>
                            <th>Short URL</th>
                            <th># of Clicks</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% urls.forEach(url => { %>
                        <tr>
                            <td>
                                <a href="<%= url.fullUrl %>" target="_blank"
                                    ><%= url.fullUrl %></a
                                >
                            </td>

                            <td>
                                <a href="<%= url.shortUrl %>" target="_blank"
                                    >https://webb.io/<%= url.shortUrl %></a
                                >
                            </td>
                            <td><%= url.clicks %></td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    </body>
</html>
